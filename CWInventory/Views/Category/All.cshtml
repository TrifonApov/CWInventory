@model IEnumerable<CategoryModel>

@{
    <h2>Categories</h2>

    <ul class="list-group">
        @foreach (var category in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <a asp-controller="Category" asp-action="GetAllProductsByCategory" asp-route-id="@category.Id">@category.Name</a>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit category</a>
            </li>
        }
    </ul>

    <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">Add new category</a>
}
