@model HireUserViewModel

@{
    ViewData["Title"] = $"Hire {@Model.Name} To Storage";
}

<h2 class="text-center">@ViewData["Title"]</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="HireToStorage" asp-route-userId="@Model.Id" method="post">
            <div class="mb-3">
                <label asp-for="@Model.StorageId" class="form-label-add-edit">Category</label>
                <select asp-for="@Model.StorageId" class="form-control" aria-required="true" required>
                    <option disabled selected> -- select an option -- </option>
                    @foreach (var storage in Model.Storages)
                    {
                        <option value="@storage.Id">@storage.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.StorageId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="HireToStorage" />
            </div>
        </form>
    </div>
</div>
